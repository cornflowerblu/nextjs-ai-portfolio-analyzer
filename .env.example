# Next.js Rendering Strategy Analyzer - Environment Variables
# Copy this file to .env.local and fill in your values

# ==============================================================================
# AI Provider Configuration (Choose one)
# ==============================================================================

# Choose AI provider: 'openai' or 'anthropic' (defaults to 'openai' if not set)
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o  # or gpt-4o-mini for cost savings

# Anthropic Configuration (Alternative to OpenAI)
# If using Anthropic, set: AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=sk-ant...
ANTHROPIC_MODEL=claude-3-5-haiku-20241022

# ==============================================================================
# Vercel Storage - Redis
# ==============================================================================
# Get these from: https://vercel.com/dashboard/stores

REDIS_URL=redis:

# ==============================================================================
# Vercel Edge Config
# ==============================================================================
# Get these from: https://vercel.com/dashboard/edge-config

EDGE_CONFIG=https://edge-config.vercel.com/...
EDGE_CONFIG_ID=

# ==============================================================================
# Application Configuration
# ==============================================================================

# Base URL for the application (used in analysis)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Enable debug mode for verbose logging
DEBUG=false

# Maximum concurrent Lighthouse analyses
MAX_CONCURRENT_ANALYSES=3

# Default revalidation time for ISR (seconds)
DEFAULT_REVALIDATION_TIME=60

# ==============================================================================
# PageSpeed Insights API
# ==============================================================================
# Get an API key from: https://console.cloud.google.com/apis/credentials
# Optional but recommended for production (without it, you're rate limited)

PAGESPEED_API_KEY=

# ==============================================================================
# Analytics (Optional)
# ==============================================================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-...

# ==============================================================================
# Firebase Authentication
# ==============================================================================
# Get these from: https://console.firebase.google.com/project/YOUR_PROJECT/settings/general/web

NEXT_PUBLIC_FIREBASE_API_KEY=AIzaSy...
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin SDK (for server-side token verification)
# For local development: Not required (uses application default credentials)
# For production (Vercel): Create and download service account JSON from Firebase Console
# Go to: Project Settings > Service Accounts > Generate New Private Key
# Then paste the entire JSON as a single-line string:
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Access Control - Email Allowlist (comma-separated)
# Specific email addresses that are allowed to sign in
NEXT_PUBLIC_ALLOWED_EMAILS=user1@example.com,user2@example.com

# Access Control - Domain Allowlist (comma-separated)
# All emails from these domains are allowed to sign in
NEXT_PUBLIC_ALLOWED_DOMAINS=slingshotgrp.com

# ==============================================================================
# Feature Flags
# ==============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable AI insights
ENABLE_AI_INSIGHTS=true

# Enable Lighthouse analysis
ENABLE_LIGHTHOUSE=true

# Enable historical trends
ENABLE_HISTORICAL_TRENDS=true

# Enable export functionality
ENABLE_EXPORTS=true

# Parameters for Vercel Postgres Templates
POSTGRES_URL=postgresql://
POSTGRES_URL_NON_POOLING=postgresql://
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=
POSTGRES_URL_NO_SSL=
POSTGRES_PRISMA_URL=postgresql://

